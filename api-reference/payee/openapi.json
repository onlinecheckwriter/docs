{
  "openapi": "3.0.1",
  "info": {
    "title": "Online Check Writer API",
    "description": "API documentation for managing payees.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://test.onlinecheckwriter.com/api/v3",
      "description": "Test server"
    },
    {
      "url": "https://app.onlinecheckwriter.com/api/v3",
      "description": "Production server"
    }
  ],
  "paths": {
    "/payees": {
      "get": {
        "summary": "Retrieve all payees",
        "description": "Retrieve a paginated list of all payee records.",
        "tags": ["Payees"],
        "parameters": [
          {
            "name": "perPage",
            "in": "query",
            "description": "Number of records to retrieve per page. Default is 10.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number for paginated results. Default is 1.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "term",
            "in": "query",
            "description": "Search term to filter payees.",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with a list of payees.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "meta": {
                          "type": "object",
                          "properties": {
                            "total": { "type": "integer", "example": 100 },
                            "currentPage": { "type": "integer", "example": 1 },
                            "perPage": { "type": "integer", "example": 10 }
                          }
                        },
                        "payees": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "payeeId": { "type": "string" },
                              "name": { "type": "string" },
                              "nickName": { "type": "string" },
                              "company": { "type": "string" },
                              "email": { "type": "string" },
                              "phone": { "type": "string" },
                              "address1": { "type": "string" },
                              "address2": { "type": "string" },
                              "city": { "type": "string" },
                              "state": { "type": "string" },
                              "zip": { "type": "string" },
                              "country": { "type": "string" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Missing or invalid token.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Unauthenticated." }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "summary": "Create payees",
        "description": "Create one or more payees.",
        "tags": ["Payees"],
        "requestBody": {
          "description": "Payload to create new payees.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "payees": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": { "type": "string", "description": "Full name of the payee." },
                        "nickName": { "type": "string", "description": "Nickname of the payee." },
                        "company": { "type": "string", "description": "Company name of the payee." },
                        "email": { "type": "string", "format": "email", "description": "Email address of the payee." },
                        "phone": { "type": "string", "description": "Phone number of the payee." },
                        "address1": { "type": "string", "description": "Primary address line of the payee." },
                        "address2": { "type": "string", "nullable": true, "description": "Secondary address line of the payee." },
                        "city": { "type": "string", "description": "City of the payee." },
                        "state": { "type": "string", "description": "State of the payee." },
                        "zip": { "type": "string", "description": "Postal code of the payee." },
                        "country": { "type": "string", "description": "Country of the payee." }
                      },
                      "required": ["name"]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Payee(s) created successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Successfully created." },
                    "data": {
                      "type": "object",
                      "properties": {
                        "payees": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "payeeId": { "type": "string" },
                              "name": { "type": "string" },
                              "nickName": { "type": "string" },
                              "company": { "type": "string" },
                              "email": { "type": "string" },
                              "phone": { "type": "string" },
                              "address1": { "type": "string" },
                              "address2": { "type": "string" },
                              "city": { "type": "string" },
                              "state": { "type": "string" },
                              "zip": { "type": "string" },
                              "country": { "type": "string" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Validation failed or duplicate payee found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": false },
                    "errorMsg": { "type": "string" },
                    "payeeId": { "type": "string", "nullable": true }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Missing or invalid token.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Unauthenticated." }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
